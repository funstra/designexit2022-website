<!DOCTYPE html>
<html lang="en" w:h="full" router:route={{page.url}}>
    <head>
        <meta charset="UTF-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>{{title or metadata.title}}</title>
        <link rel="preload" as="font" type="font/woff2" href="/assets/fonts/pjr-bold.woff2" crossorigin=""/>
        <link rel="preload" as="font" type="font/woff2" href="/assets/fonts/pjr-light.woff2" crossorigin=""/>
        <link rel="preload" as="font" type="font/woff2" href="/assets/fonts/pjr-medium.woff2" crossorigin=""/>
        {# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer"/> #}
        {% if build.env == "production" %}
            {% viteLinkStylesheetTags "src/client/main.js" %}
            {% viteLinkModulePreloadTags "src/client/main.js" %}
        {% endif %}
        <script>
            if (localStorage.getItem("theme") != "light" && window.matchMedia("prefers-color-scheme: dark")) {
                localStorage.setItem("theme", "dark");
                document
                    .documentElement
                    .classList
                    .add("dark");
            }
        </script>
    </head>
    <body w:h="full" w:flex="~ col" w:overflow="hidden" w:p="x-xs b-xs">
        {% include "partials/header.njk" %}
        {% include "partials/main.njk" %}
        {% if build.env == "production" %}
            {% viteScriptTag "src/client/main.js" %}
        {% else %}
            <script type="module" src="http://localhost:3000/@vite/client"></script>
            <script type="module" src="http://localhost:3000/src/client/main.js"></script>
        {% endif %}
    </body>
</html>