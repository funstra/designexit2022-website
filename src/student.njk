---
layout: layouts/base.njk
tags: studenterPages
pagination:
  data: studenter
  size: 1
  alias: student
  addAllPagesToCollections: true
permalink: "/student/{{(student.fnamn + '-' + student.enamn) | slug}}/"
---

{% set studentSlug = (student.fnamn + '-' + student.enamn) | slug %}
{% set
alster = student.alster() %}

{# small font triangle #}
{% import "macros/smol-tri.njk" as smol %}

<section id="personligsida" w:flex="~ col" w:grid="gap-s" w:p="y-xl" style="--width: 85rem">

    {# tillbaka #}
    <a
        href="/"
        id="tillbaka"
        onclick="
        event.preventDefault()
        history.pushState('student',null,'/#{{ studentSlug }}')
        location.reload()">
        {{smol.tri()}}Tillbaka
    </a>

    {# student #}
    <div class="student">
        {# portrait #}
        <div class="portrait">
            {% if build.env == "production" %}
                {% image 'alster',
                studentSlug + '/' + 'portrait.png',
                "Porträtt av" + student.fnamn + " " + student.enamn + " med en triangel som bakgrund",
                studentSlug %}
            {% else %}
                <img
                src="/assets/alster/{{studentSlug}}/portrait.png"
                alt="Porträtt av {{student.fnamn}} {{student.enamn}} med en triangel som bakgrund"/>
            {% endif %}

        </div>
        {# länkar #}
        {% import "macros/icon.njk" as icon %}
        {% set links = student.links %}
        {# {% if links | gotLinks %} #}
        <ul class="socials | py-3xs min-h-[3.43ch] flex gap-2xs" >
            {# socials #}
            {% for name, href in links %}
                {% if href %}
                    <a w:text="underline underline-1"  w:w="3ch" w:display="block" title="{{name}}"  href="{{ href }}">{{ icon.social(name) }}</a>
                {% endif %}
            {% endfor %}
        </ul>
        {# {% endif %} #}

        {# namn #}
        <h2 >
            {{ student.fnamn }}
            <br>
            {{ student.enamn }}
        </h2>

        {# beskrivning #}
        <p  >{{ student.beskrivning }}</p>

        {# alster #}
        <div class="alster">
            <h2>Portfolio</h2>
            <ul aria-hidden="true">
                {% for alst in alster %}
                    {% set isVideo = '.mov' in alst or '.mp4' in alst %}
                    <li  id="alster{{loop.index}}">
                        <div>
                            {% if isVideo %}
                                <video controls w:cursor="pointer" src="/assets/{{alst}}" alt="Ett alster"></video>
                            {% else %}
                                {% if build.env == 'production' %}
                                    {% image '',
                                    alst,
                                    "Ett alster",
                                    studentSlug %}
                                {% else %}
                                    <img  src="/assets/{{ alst }}" alt="Ett alster"/>
                                {% endif %}
                            {% endif %}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>

    </div>

    {# gallery #}
    <div class="gallery">
        <div class="content">
            <div data-target="prev">
                <svg width="32" height="32" fill="currentColor">
                    <g>
                        <polygon points="0,16 32,32 32,0"/>
                    </g>
                </svg>
            </div>
            <div class="frame"></div>
            <div data-target="next">
                <svg width="32" height="32" fill="currentColor">
                    <g transform="rotate(180)" transform-origin="center">
                        <polygon points="0,16 32,32 32,0"/>
                    </g>
                </svg>
            </div>
        </div>
        <svg width="32" height="32" >
            <g stroke="currentColor" stroke-width="4">
                <line x1="2" y1="2" x2="30" y2="30"/>
                <line x1="30" y1="2" x2="2" y2="30"/>
            </g>
        </svg>
    </div>

    {# nav #}
    <nav w:w="full" w:flex="~" w:justify="between">

        {% if pagination.href.previous %}
            <a href="{{ pagination.href.previous }}">
                {{smol.tri()}} Föregående</a>
        {% endif %}

        {% if pagination.href.next %}
            <a href="{{ pagination.href.next }}" class="{{'ml-auto' if not pagination.href.previous else ""}}">Nästa {{smol.tri(r=180)}}</a>
        {% endif %}
    </nav>
</section>